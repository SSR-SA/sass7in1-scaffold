{
  "name": "sass7in1-scaffold",
  "version": "1.0.0",
  "description": "CLI tool to scaffold a robust Sass 7-in-1 architecture with best practices for Next.js, React, and Vite React projects, including automatic setup of folder structure, Sass partials, and main stylesheet imports.",
  "main": "index.js",
  "bin": {
    "sass7in1-scaffold": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node cli.ts",
    "postinstall": "sass7in1-scaffold init"
  },
  "keywords": [
    "sass",
    "scss",
    "cli",
    "nextjs",
    "react",
    "vite",
    "scaffold",
    "sass-architecture"
  ],
  "author": "Sai",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
